<UserControl
    x:Class="ProjectB.View.Controls.FieldControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectB.View.Controls"
    mc:Ignorable="d"
    d:DesignHeight="75"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    d:DesignWidth="75">

    <Grid
        Name="grdBack">

        <Canvas
            x:Name="grdPawn"
            Margin="3">
            

            <Image
                Width="{Binding ActualWidth, ElementName=grdPawn}"
                Height="{Binding ActualHeight, ElementName=grdPawn}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                x:Name="imgPawn" />

            <Grid
                Width="{Binding ActualWidth, ElementName=grdPawn}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    FontSize="14"
                    Margin="0"
                    x:Name="txtHp"
                    Foreground="Red">

                </TextBlock>

                <TextBlock
                    FontSize="14"
                    Margin="0"
                    x:Name="txtManna"
                    Grid.Column="2"
                    Foreground="Blue">
                </TextBlock>

            </Grid>

        </Canvas>

    </Grid>

</UserControl>
