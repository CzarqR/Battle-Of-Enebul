<UserControl
    x:Class="ProjectB.View.Controls.FieldControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectB.View.Controls"
    mc:Ignorable="d"
    d:DesignHeight="64"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    d:DesignWidth="64">

    <Grid
        Margin="1"
        Name="grdBack">

        <Grid
            Name="grdCast">

            <Canvas
                x:Name="canMag">

                <Image
                    Width="{Binding ActualWidth, ElementName=canMag}"
                    Height="{Binding ActualHeight, ElementName=canMag}"
                    x:Name="imgPawn" />

                <Grid
                    Width="{Binding ActualWidth, ElementName=canMag}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        FontSize="14"
                        Margin="1,0,0,0"
                        x:Name="txtHp"
                        Foreground="Red">

                    </TextBlock>

                    <TextBlock
                        FontSize="14"
                        Margin="0,0,2,0"
                        x:Name="txtManna"
                        Grid.Column="2"
                        Foreground="Blue">
                    </TextBlock>

                </Grid>

            </Canvas>

        </Grid>

    </Grid>

</UserControl>
