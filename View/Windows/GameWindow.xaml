<Window
    x:Class="ProjectB.View.Windows.GameWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ProjectB.View.Windows"
    xmlns:arena="clr-namespace:ProjectB.View.Controls"
    mc:Ignorable="d"
    Title="Battle Ground"
    Height="861"
    Width="1200"
    Margin="3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="855" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <UniformGrid
            x:Name="board"
            Columns="11"
            Rows="11"
            Margin="2">

        </UniformGrid>

        <StackPanel
            Margin="2"
            Background="DarkGreen"
            Grid.Column="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="2*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="2*" />
                </Grid.RowDefinitions>

                <Grid
                    Width="64"
                    Height="64"
                    Background="Pink"
                    Name="imgInfoFloor">
                    <Grid
                        Name="imgInfoPawn" />
                </Grid>

                <TextBlock
                    TextWrapping="Wrap"
                    Background="Azure"
                    x:Name="txtBase"
                    Grid.Column="1">

                </TextBlock>

                <TextBlock
                    TextWrapping="Wrap"
                    Background="DarkKhaki"
                    Name="txtPrec"
                    Grid.ColumnSpan="2"
                    Grid.Row="1">

                </TextBlock>

            </Grid>

        </StackPanel>

    </Grid>
</Window>
