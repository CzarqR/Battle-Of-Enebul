<Window
    x:Class="ProjectB.View.Windows.GameWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ProjectB.View.Windows"
    xmlns:arena="clr-namespace:ProjectB.View.Controls"
    xmlns:R="clr-namespace:ProjectB.Properties"
    mc:Ignorable="d"
    Title="Battle Ground"
    Height="732"
    Width="1050"
    Margin="3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="732" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <UniformGrid
            Background="Brown"
            x:Name="board"
            Columns="11"
            Rows="11"
            Margin="2">

        </UniformGrid>

        <StackPanel
            Margin="2"
            Background="DarkGreen"
            Grid.Column="1">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="30" />
                    <RowDefinition
                        Height="100" />
                    <RowDefinition
                        Height="80" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="100" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Background="Azure"
                    x:Name="txtTitle"
                    Grid.ColumnSpan="2">

                </TextBlock>

                <Grid
                    Width="100"
                    Height="100"
                    Background="Pink"
                    Grid.Row="1"
                    Name="imgInfoFloor">

                    <Image
                        Width="100"
                        Height="100"
                        Name="imgInfoPawn" />

                </Grid>

                <TextBlock
                    Padding="3"
                    Grid.Column="1"
                    Grid.Row="1"
                    TextWrapping="Wrap"
                    Background="DarkKhaki"
                    Name="txtDesc" />

                <TextBlock
                    Background="CadetBlue"
                    x:Name="txtInfoBonuses"
                    Grid.Row="2"
                    Grid.ColumnSpan="2" />

            </Grid>

            <StackPanel
                x:Name="grdAttack"
                Background="Red">

                <Button
                    IsEnabled="False"
                    x:Name="butPrimaryAttack"
                    MouseEnter="MouseEnterPrimaryAttackButton"
                    MouseLeave="MouseLeaveAttackButton"
                    Margin="5,10"
                    Content="{x:Static R:Resources.primary_attack}"
                    Click="ButPrimaryAttackClick"></Button>
                <Button
                    IsEnabled="False"
                    x:Name="butExtraAttack"
                    MouseLeave="MouseLeaveAttackButton"
                    MouseEnter="MouseEnterExtraAttackButton"
                    Margin="5,10"
                    Content="Extra Attack"
                    Click="ButExtraAttackClick"></Button>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        IsEnabled="False"
                        Name="stcDiceRoll1">
                        <Label
                            Content="Dice roll 1st player"
                            HorizontalContentAlignment="Center"></Label>
                        <Image
                            MouseLeftButtonDown="Image_MouseLeftButtonDown"
                            Name="imgDiceRoll1"
                            Margin="20"
                            Source="/Res/Images/Dices/dice_0.png" />

                    </StackPanel>

                    <StackPanel
                        IsEnabled="False"
                        Name="stcDiceRoll2"
                        Grid.Column="1">
                        <Label
                            Content="Dice roll 2nd player"
                            HorizontalContentAlignment="Center"
                            Grid.Column="1"></Label>

                        <Image
                            MouseLeftButtonDown="ImgDiceRoll2_MouseLeftButtonDown"
                            Name="imgDiceRoll2"
                            Margin="20"
                            Source="/Res/Images/Dices/dice_0.png" />

                    </StackPanel>

                </Grid>

            </StackPanel>

            <Button
                Margin="5,10"
                x:Name="endMovement"
                Content="Skip Movement"
                Click="EndMovement_Click" />

            <Button
                Margin="5,10"
                x:Name="endRound"
                Content="End round"
                Click="ButEndRoundClik" />

        </StackPanel>

    </Grid>
</Window>
